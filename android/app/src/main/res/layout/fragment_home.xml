<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <com.phoenix.lotterys.view.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        app:left="0x00000008"
        app:right_icon="@mipmap/menu"
        app:right_text="首页"
        app:title=""
        app:titlebar_type="10">
    </com.phoenix.lotterys.view.CustomTitleBar>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160">

                    <com.youth.banner.Banner
                        android:id="@+id/home_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_160"
                        app:image_scale_type="fit_xy" />

                    <TextView
                        android:id="@+id/tv_on_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_11"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/frame"
                        android:padding="@dimen/dp_10"
                        android:text="当前在线人数：4000"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/notice" />

                    <com.phoenix.lotterys.view.MarqueTextView
                        android:id="@+id/marquee"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        app:content_single_text=""
                        app:content_text_color="@color/black"
                        app:content_text_size="15sp" />

                </LinearLayout>

                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:visibility="gone">
                    <!--android:background="@color/my_line"-->
                </View>

                <LinearLayout
                    android:id="@+id/ll_result"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_125"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@mipmap/icon_border"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_draw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="历史记录>" />

                        <CheckBox
                            android:id="@+id/cb_show"
                            style="@style/VoiceCheckBoxTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:checked="true"
                            android:padding="@dimen/dp_5">

                        </CheckBox>


                        <TextView
                            android:id="@+id/tv_result"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/sp_16"
                            android:gravity="center"
                            android:textColor="@color/black"
                            />

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="咪" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_six_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5" />

                        <TextView
                            android:id="@+id/tv_opening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/opening"
                            android:textColor="@color/color_FF6880"
                            android:textSize="@dimen/sp_30"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8">

                        <TextView
                            android:id="@+id/tv_nextdata"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="下期开奖日期："
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="直播倒计时："
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_countdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textColor="@color/fount1"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_six_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_5" />

                <com.youth.banner.Banner
                    android:id="@+id/iv_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    app:image_scale_type="fit_xy"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:visibility="gone"></View>

                <LinearLayout
                    android:id="@+id/tb_ticket_type_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    >

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tb_ticket_type"
                        android:visibility="gone"
                        style="@style/pub_tex"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        app:tabIndicatorColor="@color/color_fe594b"
                        app:tabIndicatorHeight="0dp"
                        app:tabMaxWidth="@dimen/dp_200"
                        app:tabMinWidth="@dimen/dp_20"
                        app:tabMode="scrollable"
                        app:tabPaddingEnd="@dimen/dp_12"
                        app:tabPaddingStart="@dimen/dp_12"
                        app:tabRippleColor="@android:color/transparent"
                        app:tabSelectedTextColor="@color/color_ff5e78"
                        app:tabTextColor="@color/color_333333" />

                </LinearLayout>

                <com.phoenix.lotterys.view.SignViewPager
                    android:id="@+id/vp_ticket_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp" />

                <LinearLayout
                    android:id="@+id/ll_coupons_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_coup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8">

                        <ImageView
                            style="@style/pub_tex"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_5"
                            android:src="@drawable/activity3" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/coupons"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_coup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_8"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_16"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/pub_tex"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:src="@drawable/seniority" />

                        <TextView
                            android:id="@+id/tv_rankinglist"
                            style="@style/pub_tex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="排行榜"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_10" />

                    <LinearLayout
                        android:id="@+id/seniority_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_30"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingRight="@dimen/dp_20">

                            <TextView
                                style="@style/TextStyle_15_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="玩家" />

                            <TextView
                                style="@style/TextStyle_15_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="游戏" />

                            <TextView
                                style="@style/TextStyle_15_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="金额" />
                        </LinearLayout>


                        <com.phoenix.lotterys.view.MarqueeView
                            android:id="@+id/recycleAuto"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_142"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5" />
                    </LinearLayout>
                </LinearLayout>
                <!--<com.phoenix.lotterys.view.AutoPollRecyclerView-->
                <!--android:id="@+id/rv_win"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dp_150"-->
                <!--android:paddingLeft="@dimen/dp_20"-->
                <!--android:paddingRight="@dimen/dp_20" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></View>

                        <ImageView
                            android:id="@+id/img_brain"
                            style="@style/pub_tex"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:src="@mipmap/dn" />

                        <TextView
                            android:id="@+id/tv_brain"
                            style="@style/pub_tex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="@string/computer"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/img_act"
                            style="@style/pub_tex"
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:src="@drawable/activityyw1" />

                        <TextView
                            android:id="@+id/tv_act"
                            style="@style/pub_tex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="@string/coupons"
                            android:textColor="@color/white" />


                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></View>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_server_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="COPYRIGHT © 68彩票 RESERVED"
                        android:textColor="@color/black1"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_redbag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            tools:visibility="visible"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_rebbag"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                tools:src="@mipmap/ic_launcher"
                android:scaleType="center"

                />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:src="@mipmap/redbag_close" />
        </RelativeLayout>

        <include layout="@layout/fragment_home_ad" />
    </LinearLayout>

</RelativeLayout>