<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:background="@color/color_212121">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/dp_190"
                    android:layout_height="@dimen/dp_38"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:scaleType="fitStart" />

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="@mipmap/blackmenu" />

                <TextView
                    android:id="@+id/tv_domain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/ll_bt"
                    android:layout_alignTop="@+id/iv_menu"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="易记域名\n"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="italic|bold" />

                <LinearLayout
                    android:id="@+id/ll_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bt_login"
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/black_login_bg"
                        android:text="登入"
                        android:textColor="@color/black1" />

                    <Button
                        android:id="@+id/bt_regedit"
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_22"
                        android:background="@drawable/black_regedit_bg"
                        android:text="免费开户"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor_downSheet_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textColor_center_title"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notice"
                    android:tint="@color/colorPrimaryDark" />

                <com.phoenix.lotterys.view.MarqueTextView
                    android:id="@+id/marquee"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    app:content_single_text=""
                    app:content_text_color="@color/white"
                    app:content_text_size="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor_downSheet_title" />

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/textColor_center_title" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="-1dp"
                android:background="@color/textColor_downSheet_title">

            </View>

            <RelativeLayout
                android:id="@+id/rl_navig"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:background="@color/color_212121">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerInParent="true">

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/textColor_downSheet_title"></View>


                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/black_home"
                        android:gravity="center"
                        android:text="首页"
                        android:textColor="@color/textColor_downSheet_title" />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/textColor_downSheet_title"></View>

                    <TextView
                        android:id="@+id/tv_online"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/server"
                        android:gravity="center"
                        android:text="在线客服"
                        android:textColor="@color/textColor_downSheet_title" />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/textColor_downSheet_title"></View>

                    <TextView
                        android:id="@+id/tv_activity"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/balck_activity"
                        android:gravity="center"
                        android:text="优惠专区"
                        android:textColor="@color/textColor_downSheet_title" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/textColor_downSheet_title"></View>


                    <TextView
                        android:id="@+id/tv_downliad"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/phone"
                        android:gravity="center"
                        android:text="APP下载"
                        android:textColor="@color/textColor_downSheet_title" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/textColor_downSheet_title"></View>


                    <TextView
                        android:id="@+id/tv_finance"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/money"
                        android:gravity="center"
                        android:text="财务中心"
                        android:textColor="@color/textColor_downSheet_title" />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/textColor_downSheet_title"></View>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_show"
                android:layout_gravity="right"

                android:layout_marginRight="@dimen/dp_20"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/black_bg"
                    android:layout_centerHorizontal="true"
                    android:tint="@color/color_212121" />

                <CheckBox
                    android:id="@+id/cb_show"
                    android:padding="@dimen/dp_2"
                    style="@style/BlackCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="收起"
                    android:textColor="@color/textColor_downSheet_title"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55">

            </View>
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/id_right_menu"
        android:name="com.phoenix.lotterys.main.SlidingRight_FragmentNew"
        android:layout_width="@dimen/dp_200"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:tag="Right" />

</androidx.drawerlayout.widget.DrawerLayout>



