<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:orientation="vertical"
    app:background="@color/color_white"
    app:contentPadding="@dimen/dp_8">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.phoenix.lotterys.view.ImageTextButton
        android:id="@+id/bt_deposit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"

        />

    <com.phoenix.lotterys.view.ImageTextButton
        android:id="@+id/bt_withdrawing"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"

        />

    <com.phoenix.lotterys.view.ImageTextButton
    android:id="@+id/bt_server"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"

    />

    <com.phoenix.lotterys.view.ImageTextButton
        android:id="@+id/bt_bankcard"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"

        />

    <com.phoenix.lotterys.view.ImageTextButton
        android:id="@+id/bt_interest"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"

        />
</LinearLayout>
</androidx.cardview.widget.CardView>
