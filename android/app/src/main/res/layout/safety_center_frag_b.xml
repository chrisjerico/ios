<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/pub_telete_lay"/>


    <RadioGroup
        android:visibility="gone"
        android:id="@+id/main_radio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        >

        <RadioButton
            android:id="@+id/login_password_radio"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:gravity="left|center_vertical"
            android:text="@string/login_password"
            android:checked="true"
            android:textSize="@dimen/sp_10"
            />
        <RadioButton
            android:id="@+id/withdrawal_password_radio"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:gravity="left|center_vertical"
            android:text="@string/withdrawal_password"
            android:textSize="@dimen/sp_10"
            />
        <RadioButton
            android:id="@+id/common_login_sites_radio"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:gravity="left|center_vertical"
            android:text="@string/common_login_location"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            />
        <RadioButton
            android:id="@+id/secondary_validation_radio"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:gravity="left|center_vertical"
            android:text="@string/secondary_validation"
            android:textSize="@dimen/sp_10"
            android:visibility="gone"
            />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/blake_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- 顶部导航栏 -->
        <LinearLayout
            android:id="@+id/navigation_bar_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/login_password"
                android:textColor="@color/fount1"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/withdrawal_password"
                android:textColor="@color/fount2"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/common_login_location"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/fount2"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tv04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/secondary_validation"
                android:visibility="gone"
                android:textColor="@color/fount2"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <!-- Tab底部下划线 -->

        <LinearLayout
            android:id="@+id/iv_tab_bottom_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:orientation="vertical"
            android:background="#66DDDDDD"
            >
            <TextView
                android:id="@+id/iv_tab_bottom_img"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/fount1"
                />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_password_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/sp_16"
        android:paddingRight="@dimen/dp_16"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                style="@style/pub_tex1"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="@string/original_password"
                />

            <EditText
                android:id="@+id/original_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:hint="@string/please_original_password"
                android:textColorHint="@color/color_white"
                android:maxLength="16"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"
                />

            <include layout="@layout/line"/>
            <TextView
                android:id="@+id/original_password_tex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:textColor="@color/color_fe594b"
                android:visibility="gone"
                android:text="@string/enter_original_password"
                />


            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                style="@style/pub_tex1"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="@string/fill_in_the_new_password"
                />

            <EditText
                android:textColorHint="@color/color_white"
                android:id="@+id/new_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:hint="@string/please_fill_in_the_new_password"
                android:maxLength="16"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"

                />

            <include layout="@layout/line"/>



            <TextView
                android:id="@+id/new_password_tex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:text="@string/inputpwd2"
                android:textColor="@color/textColor_downSheet_title"
                />


            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                style="@style/pub_tex1"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="@string/confirm_the_new_password"
                />

            <EditText
                android:textColorHint="@color/color_white"
                android:id="@+id/confirm_new_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                android:hint="@string/please_confirm_the_new_password"
                android:maxLength="16"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"

                />

            <include layout="@layout/line"/>
            <TextView
                android:id="@+id/confirm_new_password_tex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:text="@string/inputpwd2"
                android:textColor="@color/textColor_downSheet_title"
                />

            <Button
                android:id="@+id/new_password_but"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="?attr/colorAccent"
                style="@style/pub_tex1"
                android:layout_marginTop="@dimen/dp_36"
                android:text="@string/sub"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_18"
                />

        </LinearLayout>
        
        
        
    </LinearLayout>


    <LinearLayout
        android:id="@+id/withdrawal_password_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/sp_16"
        android:paddingRight="@dimen/dp_16"
        android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/goto_setting_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

          <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              style="@style/pub_tex1"
              android:text="请您先初始化取款密码、绑定银行卡"
              android:textSize="@dimen/sp_16"
            />

            <TextView
                android:layout_margin="@dimen/dp_20"
                android:id="@+id/goto_binding_tex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                style="@style/pub_tex1"
                android:background="@drawable/lottery_bck_14"
                android:text="立即绑定"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/modification_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                style="@style/pub_tex1"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="@string/fill_old_withdrawal_password"
                />

            <EditText
                android:textColorHint="@color/color_white"
                android:hint="@string/fill_old_withdrawal_password"
                android:id="@+id/old_withdrawal_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:inputType="textPassword"
                android:gravity="left|center_vertical"

                />

            <include layout="@layout/line"/>
            <TextView
                android:id="@+id/old_withdrawal_password_tex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:text="@string/please_fill_old_withdrawal_password"
                android:textColor="@color/color_fe594b"
                android:visibility="gone"
                />


            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                style="@style/pub_tex1"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="@string/fill_in_the_new_password"
                />

            <EditText
                android:hint="@string/fill_in_the_new_password"
                android:textColorHint="@color/color_white"
                android:id="@+id/new_withdrawal_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"
                android:maxLength="4"

                />

            <include layout="@layout/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/new_withdrawal_password_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    style="@style/pub_tex1"
                    android:text="@string/please_fill_in_the_new_password"
                    android:textColor="@color/color_fe594b"
                    android:visibility="gone"
                    />

            <TextView
                android:id="@+id/new_withdrawal_password_num_tex"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_30"
                style="@style/pub_tex1"
                android:layout_gravity="right"
                android:gravity="right|center_vertical"
                android:text="0/4"
                />

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                style="@style/pub_tex1"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="@string/confirm_the_new_password"
                />

            <EditText
                android:hint="@string/confirm_the_new_password"
                android:textColorHint="@color/color_white"
                android:id="@+id/confirm_withdrawal_password_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@null"
                style="@style/pub_tex1"
                android:layout_gravity="left"
                android:gravity="left|center_vertical"
                android:inputType="textPassword"
                android:maxLength="4"
                />

            <include layout="@layout/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/confirm_withdrawal_password_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    style="@style/pub_tex1"
                    android:text="@string/inputpwd6"
                    android:textColor="@color/color_fe594b"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/confirm_withdrawal_password_num_tex"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_30"
                    style="@style/pub_tex1"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text="0/4"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/commit_withdrawal_password_but"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="?attr/colorAccent"
                style="@style/pub_tex1"
                android:layout_marginTop="@dimen/dp_36"
                android:text="@string/sub"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_18"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_login_sites_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            style="@style/pub_tex1"
            android:text="@string/select_common_login_location"
            android:layout_gravity="left"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            >

        <LinearLayout
            android:id="@+id/country_lin"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_39"
                android:orientation="horizontal"

                >
                <TextView
                    android:textColorHint="@color/color_white"
                    android:id="@+id/country_tex"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/pub_tex1"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/sp_12"
                    android:hint="请选择国家"
                    />

                <ImageView
                    android:id="@+id/country_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/white_down"
                    />


            </LinearLayout>

            <include layout="@layout/line"
                android:id="@+id/country_view"
                />


        </LinearLayout>



            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/province_lin"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_39"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:textColorHint="@color/color_white"
                        android:hint="请选择省"
                        android:id="@+id/province_tex"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/pub_tex1"
                        android:textSize="@dimen/sp_12"
                        android:gravity="left|center_vertical"
                        />

                    <ImageView
                        android:id="@+id/province_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/white_down"
                        />


                </LinearLayout>

                <include layout="@layout/line"
                    android:id="@+id/province_view"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/city_lin"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"

                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_39"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:textColorHint="@color/color_white"
                        android:hint="请选择市"
                        android:id="@+id/city_tex"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/pub_tex1"
                        android:textSize="@dimen/sp_12"
                        android:gravity="left|center_vertical"
                        />

                    <ImageView
                        android:id="@+id/city_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/white_down"
                        />

                </LinearLayout>

                <include layout="@layout/line"
                    android:id="@+id/city_view"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/added_lin"

            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex1"
            android:text="@string/added"
            android:layout_gravity="left|center_vertical"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/added_rec"
            />

        </LinearLayout>


        <Button
            android:id="@+id/added_city_commit_but"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="?attr/colorAccent"
            style="@style/pub_tex1"
            android:layout_marginTop="@dimen/dp_36"
            android:text="@string/add"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_18"
            />

        </LinearLayout>


    //二次验证(一)
    <LinearLayout
        android:id="@+id/secondary_validation_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您将通过谷歌身份验证器免费获取验证码，增强您的账号资金安全。如果您的手机已经安装谷歌验证器，请点击下一步进行绑定，如果没有请根据您的设备选择下方链接进行安装。"
            android:lineSpacingExtra="@dimen/dp_5"
            android:textColor="@color/color_white"
            />

        <TextView
            android:id="@+id/download_app_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex1"
            android:layout_marginTop="@dimen/dp_30"
            android:text="安卓手机点击下载"
            android:textSize="@dimen/sp_16"
            android:textColor="#ff4081"
            />


        <TextView
            android:id="@+id/next_tex"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            style="@style/pub_tex1"
            android:layout_marginTop="@dimen/dp_30"
            android:text="我已安装，下一步"
            android:textColor="@color/white"
            android:background="?attr/colorAccent"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            />

    </LinearLayout>

    //二维码(二)
    <LinearLayout
        android:id="@+id/google_binding_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_16"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/pub_tex1"
            android:layout_marginTop="@dimen/dp_30"
            android:text="请在谷歌验证器中扫描以下二维码："
            />


        <ImageView
            android:id="@+id/qr_code_img"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            style="@style/pub_tex1"
            />

        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="如果您无法扫描二维码，可以选择手动输入验证码,输入您的电子邮件地址和此密钥："
            android:lineSpacingExtra="@dimen/dp_5"
            android:textColor="@color/color_white"
            />


        <LinearLayout
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/secret_key_tex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/pub_tex1"
                android:gravity="center_vertical|left"
                />

            <TextView
                android:id="@+id/copy_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/pub_tex1"
                android:text="点击复制"
                android:layout_marginLeft="@dimen/dp_30"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            >

            <TextView
                android:id="@+id/go_back_tex"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/pub_tex1"
                android:text="返回上一级"
                android:textColor="@color/color_white"
                android:background="?attr/colorAccent"
                />

            <TextView
                android:id="@+id/is_binding_tex"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/pub_tex1"
                android:text="我已绑定，下一步"
                android:textColor="@color/color_white"
                android:background="?attr/colorAccent"
                />

        </LinearLayout>
    </LinearLayout>


    //二次验证（三）
    <LinearLayout
        android:id="@+id/verification_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView

            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex1"
            android:text="请输入您在该应用中看到的 6 位数验证码："
            />

        <EditText
            android:textColorHint="@color/color_white"
            android:id="@+id/verification_edit"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            style="@style/pub_tex1"
            android:hint="输入验证码"
            android:maxLength="6"
            android:inputType="number"
            />


        <LinearLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            >

            <TextView
                android:id="@+id/verification_go_back_tex"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/pub_tex1"
                android:text="返回上一级"
                android:textColor="@color/color_white"
                android:background="?attr/colorAccent"
                />

            <TextView
                android:id="@+id/verification_ok_tex"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/pub_tex1"
                android:text="完成验证"
                android:textColor="@color/color_white"
                android:background="?attr/colorAccent"
                />

        </LinearLayout>

    </LinearLayout>

    //二次验证4（解绑）
    <LinearLayout
        android:id="@+id/unbundle_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="@dimen/dp_16"
        >

        <TextView
            android:id="@+id/unbundle_tex"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text="（已启用）您已经成功启用二次验证，登录时请输入您手机上的谷歌验证器显示的6位数字，进行登录二次验证。如果您删除了谷歌验证器，或遗失手机，请联系客服。"
            />

        <TextView
            android:id="@+id/stop_google_tex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="?attr/colorAccent"
            style="@style/pub_tex1"
            android:layout_marginTop="@dimen/dp_36"
            android:text="点击停用谷歌验证器"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_18"
            />


    </LinearLayout>



    </LinearLayout>



