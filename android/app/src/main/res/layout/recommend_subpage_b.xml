<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/subpage_name_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:text="首页推荐地址"
            android:gravity="left|center_vertical"
            />

        <TextView
            android:id="@+id/copylink_tex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:background="@drawable/lottery_bck_14"
            style="@style/pub_tex1"
            android:text="复制链接"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/url"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:gravity="left|center_vertical"
            android:textColor="@color/textColor_alert_button_cancel"
            />

        <Switch
            android:id="@+id/switch_v"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:track="@drawable/switch_custom_track_selector" />


        <TextView
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:text="二维码"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/qr_code_img"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        style="@style/pub_tex1"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone"
        />


</LinearLayout>
