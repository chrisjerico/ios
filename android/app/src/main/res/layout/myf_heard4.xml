<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_lin"
    android:background="@drawable/lottery_bck_14"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    >



        <LinearLayout
            android:id="@+id/rl_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:orientation="horizontal"
            android:paddingRight="@dimen/dp_15">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@drawable/head"
                />

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_img"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/pub_tex"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_userParentId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="vip"
                        android:gravity="right"
                        android:textColor="@color/color_white"
                        style="@style/pub_tex"
                        android:textSize="@dimen/sp_10" />
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/iv_level"/>-->


                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>


                    <ImageView
                        android:id="@+id/iv_task"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:background="@drawable/usercenter"
                        android:adjustViewBounds="true"
                        style="@style/pub_tex"
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥  "
                        android:textColor="@color/color_white"
                        style="@style/pub_tex"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 10000  "
                        android:textColor="@color/color_white"
                        style="@style/pub_tex"
                        android:textSize="@dimen/sp_16" />


                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@mipmap/refresh" />
                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/iv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:adjustViewBounds="true"
                        android:background="@drawable/dailysign_new"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111111"
                    android:id="@+id/tv_taskreward"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/grow_up_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_userInfo"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/ll_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_12"
                >

                <TextView
                    android:id="@+id/tv_grow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="距离下一级还差200分"
                    android:textColor="@color/color_white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/grow_up_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_level"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_8">

                <TextView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    style="@style/pub_tex"
                    android:textColor="@color/white"
                    android:gravity="top"
                    android:text="成长值:"
                    android:textSize="@dimen/sp_14"
                    />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                <LinearLayout
                    android:id="@+id/progress_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/pub_tex"
                    >

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/color_white" />

                    <ProgressBar
                        android:id="@+id/progress1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:progressDrawable="@drawable/progress_bg" />

                    <TextView
                        android:id="@+id/tv_next_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/color_white" />

                </LinearLayout>

                    <TextView
                        android:id="@+id/progress_value_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/pub_tex"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/fount1"
                        />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_60"
                android:layout_marginBottom="@dimen/dp_15"
                >

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="wrap_content"
                    style="@style/pub_tex"
                    android:src="@drawable/vip"
                    android:adjustViewBounds="true"
                    />

            <TextView
                android:id="@+id/current_vip_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/pub_tex"
                android:textColor="#ffff8c"
                android:textSize="@dimen/sp_16"
                />

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="wrap_content"
                    style="@style/pub_tex"
                    android:src="@drawable/vip"
                    />

                <TextView
                    android:id="@+id/next_vip_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/pub_tex"
                    android:text="vip1"
                    android:textColor="#ffff8c"
                    android:textSize="@dimen/sp_16"
                    />
            </LinearLayout>




        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/grow_up_rel"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:visibility="gone"
        >

        <include
            layout="@layout/myf1_pub"
            />
    </LinearLayout>

</RelativeLayout>

