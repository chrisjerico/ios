<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_16"
    android:background="@color/color_white"
    >

    <ImageView
        android:id="@+id/head_img"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        style="@style/pub_tex"
        android:src="@drawable/head"
        />

        <TextView
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:text="头像预览"
            android:textSize="@dimen/sp_18"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:src="@drawable/return_ash_left"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/head_pop_rec"
            android:layout_margin="@dimen/dp_8"
            />

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            style="@style/pub_tex"
            android:src="@drawable/return_back_right"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        >

        <TextView
            android:id="@+id/commit_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            style="@style/pub_tex"
            android:background="@drawable/lottery_bck_14"
            android:textColor="@color/color_white"
            android:text="保存头像"
            android:textSize="@dimen/sp_16"
            />

        <TextView
            android:id="@+id/clera_tex"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            style="@style/pub_tex"
            android:background="@drawable/lottery_bck_7"
            android:textColor="@color/color_white"
            android:text="取消"
            android:textSize="@dimen/sp_16"
            />

    </LinearLayout>


</LinearLayout>
