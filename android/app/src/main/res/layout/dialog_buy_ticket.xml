<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_buy_ticket_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape_ticket_dialog_title_bg"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle_15_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:id="@+id/tv_title_num"
            android:text="号码" />

        <TextView
            style="@style/TextStyle_15_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/tv_title_odds"
            android:text="赔率" />

        <TextView
            style="@style/TextStyle_15_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:id="@+id/tv_title_money"
            android:text="金额" />

        <TextView
            style="@style/TextStyle_15_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:id="@+id/tv_title_handle"
            android:text="操作" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ticket"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:gravity="left|center_vertical">

        <TextView
            style="@style/TextStyle_15_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量修改金额：" />

        <EditText
            android:id="@+id/tv_all_amount"
            style="@style/TextStyle_12_3"
            android:minWidth="120dp"
            android:layout_width="wrap_content"
            android:background="@drawable/input_select"
            android:inputType="numberDecimal"
            android:maxLength="15"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            tools:text="999.0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:id="@+id/view"
        android:background="@color/color_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical|right">

        <TextView
            style="@style/TextStyle_15_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tltle_allbet"
            android:text="合计注数：" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5"
            android:textColor="@color/color_22a6ec"
            android:textSize="@dimen/sp_15" />

        <TextView
            style="@style/TextStyle_15_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tltle_allmoney"
            android:text="，总金额：" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            tools:text="¥6666.5"
            android:textColor="@color/color_22a6ec"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            style="@style/TextStyle_15_3"
            android:id="@+id/tv_close_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="封盘时间：" />

        <!--<TextView-->
            <!--android:id="@+id/tv_close_time"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:text="已封盘"-->
            <!--android:textColor="@color/color_22a6ec"-->
            <!--android:textSize="@dimen/sp_15" />-->
        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/cv_close_time"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixDay="天"
            app:suffixHour=":"
            app:suffixMinute=":"
            app:suffixSecond=""
            app:suffixTextColor="@color/color_22a6ec"
            app:timeTextColor="@color/color_22a6ec"
            />
        <!--<View-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1">-->
        <!--</View>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextStyle_15_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_btn_cancel_bg"
            android:padding="@dimen/dp_5"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hollow_deepred"
            android:padding="@dimen/dp_5"
            android:text="确认下注"
            android:textColor="@color/color_white"

            />
    </LinearLayout>


</LinearLayout>