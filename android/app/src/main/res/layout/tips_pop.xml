<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_60"
    android:layout_marginLeft="@dimen/dp_60"
    android:background="@drawable/shape_buy_hall_ticket_bg"
    android:orientation="vertical"
    android:id="@+id/fdsfaaa"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        style="@style/pub_tex"
        android:text="安全提示"
        />

    <include layout="@layout/line" />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="为了您的账号安全，现在可以绑定常用登陆地"
        android:textColor="@color/color_FF2600"
        android:textSize="@dimen/sp_16"
        android:drawableLeft="@drawable/warning_tips"
        android:drawablePadding="@dimen/dp_5"
        android:gravity="left|center_vertical"
        />


    <TextView
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="1、绑定后,只有在常用地范围内,才能正常登陆\n2、可以绑定多个常用地\n3、绑定后,可选择默认选项(请选择国家-请选择省-请选择市)即可自行解除绑定"
        android:textSize="@dimen/sp_18"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        />

    <include layout="@layout/line" />


    <TextView
        android:id="@+id/commit_pop_tex"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/pub_tex"
        android:text="我知道了"
        android:textSize="@dimen/sp_18"
        android:textColor="?attr/colorAccent"
        />

</LinearLayout>
