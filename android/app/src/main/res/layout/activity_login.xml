<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_backgroup"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.phoenix.lotterys.view.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        app:left="0x00000000"
        app:left_icon="@drawable/finish"
        app:right_icon="@drawable/more"
        app:right_text=""
        app:title="登录"
        app:titlebar_type="13">
    </com.phoenix.lotterys.view.CustomTitleBar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rl_login"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/theme_lin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_150"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/theme_tex"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/colorAccent" />

            <com.phoenix.lotterys.view.DynamicWave
                android:id="@+id/d_wave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:rotation="180" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/color_white_B3"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/tv_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@mipmap/user_circle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tv_img"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/inputuser"
                            android:lines="1"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:inputType="text"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/tv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_3"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginTop="-8dp"
                            android:text="@string/mustputuser"
                            android:textColor="@color/fount1"
                            android:textSize="@dimen/sp_9"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/tv_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@mipmap/pwd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tv_img1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/inputpwd"
                                android:inputType="textPassword"
                                android:lines="1"
                                android:maxLength="16"
                                android:singleLine="true"
                                android:textColorHint="@color/colorPrimary"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="@dimen/sp_12" />

                            <CheckBox
                                android:id="@+id/cb_show"
                                style="@style/CustomCheckBoxTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:checked="false" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_3"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_marginTop="-8dp"
                            android:text="@string/mustputpsw"
                            android:textColor="@color/fount1"
                            android:textSize="@dimen/sp_9"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/cb_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:checked="true"
                    android:text="@string/mind_psw"
                    android:textSize="@dimen/sp_10"
                    android:theme="@style/My_CheckBox" />

                <im.delight.android.webview.AdvancedWebView
                    android:id="@+id/web"
                    android:layout_marginTop="-5dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/lottery_bck_14"
                    android:text="@string/login"
                    android:textColor="@color/color_f4f4f4" />

                <Button
                    android:id="@+id/bt_regedit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/bt_backgroup1"
                    android:text="@string/regedit"
                    android:textColor="?attr/colorAccent" />

                <Button
                    android:id="@+id/bt_playgame"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/bt_backgroup1"
                    android:text="@string/playgame"
                    android:textColor="?attr/colorAccent" />


                <Button
                    android:id="@+id/bt_online_service"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/bt_backgroup1"
                    android:text="@string/online_service"
                    android:textColor="?attr/colorAccent"
                    android:visibility="gone"/>


                <Button
                    android:id="@+id/bt_gotohome"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/bt_backgroup1"
                    android:text="@string/gotohome"
                    android:textColor="?attr/colorAccent" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>