<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorAccent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:id="@+id/main_tex"
    android:paddingRight="@dimen/dp_16"
    >

        <LinearLayout
            android:id="@+id/rl_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_1"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@drawable/head"
                />

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_userParentId"
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        style="@style/pub_tex"
                        android:gravity="left"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_10" />

                    <ImageView
                        android:id="@+id/iv_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/usercenter" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额："
                        android:textColor="@color/color_white"
                        style="@style/pub_tex"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 10000  "
                        android:textColor="@color/color_white"
                        style="@style/pub_tex"
                        android:textSize="@dimen/sp_16" />


                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/pub_tex"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@mipmap/refresh" />

                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/iv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dailysign_new"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:textColor="@color/white"
         />

        <TextView
            android:id="@+id/tv_taskreward"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:text="积分：0.0000"
            android:textColor="@color/white"
            />

    </LinearLayout>

                <LinearLayout
                    android:id="@+id/progress_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/color_white"
                        android:text="成长值:"
                        />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        >

                    <ProgressBar
                        android:id="@+id/progress1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:progressDrawable="@drawable/progress_bg" />


                        <TextView
                            android:id="@+id/percentage_tex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/pub_tex"
                            android:text="100%"
                            android:textSize="@dimen/sp_8"
                            android:textColor="@color/color_fe594b"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/dp_10"
                            />

                    </FrameLayout>


                </LinearLayout>
    
                <TextView
                    android:id="@+id/current_level_tex"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/pub_tex"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="@dimen/dp_55"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableLeft="@drawable/win_third"
                    android:text="vip1"
                    android:textColor="@color/message_text_color"
                    />

                <LinearLayout
                    android:id="@+id/user_money_lin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:background="@drawable/ba_top_wh_5"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_8"
                    >

                    <TextView
                        android:id="@+id/tv_money1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_fe594b"
                        style="@style/pub_tex"
                        android:textSize="@dimen/sp_16"
                        android:drawablePadding="@dimen/dp_3"
                        android:drawableLeft="@drawable/win_third"
                        />


                    <ImageView
                        android:id="@+id/iv_refresh1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_gravity="center"
                        android:background="@mipmap/sx" />


                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/recharge_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/pub_tex"
                        android:background="@drawable/lottery_bck_1"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_3"
                        android:text="充值"
                        />


                    <TextView
                        android:id="@+id/deposit_tex"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/pub_tex"
                        android:background="@drawable/lottery_bck_1"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_3"
                        android:text="提现"
                        />


                    <TextView
                        android:id="@+id/line_conversion_tex"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/pub_tex"
                        android:background="@drawable/lottery_bck_1"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_3"
                        android:text="额度转换"
                        />

                </LinearLayout>

</LinearLayout>

