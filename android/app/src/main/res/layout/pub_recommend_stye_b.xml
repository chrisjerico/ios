<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="@dimen/dp_40"
android:orientation="horizontal"
      android:id="@+id/main_lin"
    >

    <LinearLayout
        android:id="@+id/name_text1_lin"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/name_text1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/pub_tex1"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:drawablePadding="@dimen/dp_5"
        />
    </LinearLayout>


    <TextView
        android:id="@+id/name_text2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        style="@style/pub_tex1"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        />
    <TextView
        android:id="@+id/name_text3"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        style="@style/pub_tex1"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        />
    <TextView
        android:id="@+id/name_text4"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        style="@style/pub_tex1"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        />
    <TextView
        android:id="@+id/name_text5"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        style="@style/pub_tex1"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        />

    <LinearLayout
        android:id="@+id/name_text1_lin0"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name_text6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:paddingLeft="@dimen/dp_2"
            android:paddingRight="@dimen/dp_2"
            android:drawablePadding="@dimen/dp_5"
            />
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
