<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_buy_ticket_dialog_bg"
    android:id="@+id/main_lin"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        style="@style/pub_tex"
        android:text="论坛昵称"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        />
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="为了保护您的隐私，请绑定论坛昵称"
        android:textSize="@dimen/sp_14"
        android:maxHeight="@dimen/dp_500"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        />


    <EditText
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:id="@+id/nice_name_edit"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape_home_ticket_bg_ask_5"
        android:hint="请输入昵称：1-8个汉字"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:maxLength="8"
        />


    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/clear_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex"
            android:text="取消"
            android:textSize="@dimen/sp_14"
            android:textColor="?attr/colorAccent"
            />

        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/my_line"/>

        <TextView
            android:id="@+id/commit_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex"
            android:text="好的"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/fount1"
            />

    </LinearLayout>

</LinearLayout>
