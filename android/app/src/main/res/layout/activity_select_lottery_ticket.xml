<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.phoenix.lotterys.buyhall.activity.SelectLotteryTicketActivity">

    <View
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_main"
        android:background="@color/color_f4f4f4"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:drawableRight="@drawable/select_ticket_close"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="点击图标切换彩票"
            android:textColor="@color/color_22a6ec"
            android:textSize="@dimen/sp_13" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tick_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white" />
    </LinearLayout>

</LinearLayout>
