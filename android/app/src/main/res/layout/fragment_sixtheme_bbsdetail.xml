<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="?attr/colorAccent">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/back1"
            android:drawablePadding="@dimen/dp_8"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/pub_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_30"
            android:text="@string/lhc_bbs_detail"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar">

        <com.phoenix.lotterys.view.MyNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_60">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_below="@+id/ll_result"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_15" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_333333" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_666666" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_redbagbbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@mipmap/redbagbbs" />

                    <TextView
                        android:id="@+id/tv_focus"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/search_bg"
                        android:gravity="center"
                        android:text="关注楼主"
                        android:textColor="@color/white" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_result"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_125"
                    android:layout_below="@+id/titlebar"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@mipmap/icon_border"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_draw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="历史记录>" />

                        <CheckBox
                            android:id="@+id/cb_show"
                            style="@style/VoiceCheckBoxTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:checked="true"
                            android:padding="@dimen/dp_5">

                        </CheckBox>


                        <TextView
                            android:id="@+id/tv_result"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <Switch
                            android:id="@+id/switch1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="咪" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_six_num"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5" />

                        <TextView
                            android:id="@+id/tv_opening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/opening"
                            android:textColor="@color/color_FF6880"
                            android:textSize="@dimen/sp_30"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8">

                        <TextView
                            android:id="@+id/tv_nextdata"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="下期开奖日期："
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="直播倒计时："
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:id="@+id/tv_countdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:textColor="@color/fount1"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/notice_lhmb"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_topimg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_110"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_8"

                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="WebViewLayout"></WebView>

                    <LinearLayout
                        android:id="@+id/ll_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_4"
                            android:scaleType="centerInside" />

                        <ImageView
                            android:id="@+id/iv_img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_4"
                            android:scaleType="centerInside" />

                        <ImageView
                            android:id="@+id/iv_img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_4"
                            android:scaleType="centerInside" />
                    </LinearLayout>
                    <com.phoenix.lotterys.view.MaxHeightRecyclerView
                        android:id="@+id/raw_night_rec"
                        android:paddingLeft="@dimen/dp_15"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_150"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/vote_tex"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/pub_tex"
                        android:background="@drawable/lottery_bck_14"
                        android:text="投票"
                        android:textColor="@color/color_white"
                        android:paddingRight="@dimen/dp_50"
                        android:paddingLeft="@dimen/dp_50"
                        android:paddingBottom="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/tv_createtime"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10" />

                    <ImageView
                        android:id="@+id/iv_bottomimg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_110"
                        android:layout_gravity="center"
                        android:padding="@dimen/dp_8"
                        android:scaleType="fitXY"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="@string/lhc_bbs_critical"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_2"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_3"
                                android:background="@color/black">

                            </View>
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_record"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_8"
                            android:padding="@dimen/dp_8" />

                        <!--<TextView-->
                        <!--android:id="@+id/tv_data"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_centerInParent="true"-->
                        <!--android:drawablePadding="@dimen/dp_5"-->
                        <!--android:gravity="center"-->
                        <!--android:drawableTop="@drawable/pl"-->
                        <!--android:text="@string/lhc_bbs_noreply"-->
                        <!--android:visibility="gone" />-->

                        <LinearLayout
                            android:id="@+id/ll_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/dp_160"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_12"
                                android:adjustViewBounds="true"
                                android:src="@drawable/pl" />

                            <TextView
                                style="@style/pub_tex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_10"
                                android:text="@string/lhc_bbs_noreply"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.phoenix.lotterys.view.MyNestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/ll_bt"
        android:background="@color/my_line"></View>

    <LinearLayout
        android:id="@+id/ll_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@mipmap/yhj" />

        <RelativeLayout
            android:id="@+id/rl_speak"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/black_edit_bck">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:hint="@string/lhc_bbs_what" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dp_38"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_25">

            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_1"
                android:text=""
                android:textSize="@dimen/dp_10" />

            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/praise"
                android:padding="@dimen/dp_8" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_replay"
            android:layout_width="@dimen/dp_38"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_25">

            <TextView
                android:id="@+id/tv_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginEnd="@dimen/dp_1"
                android:text=""
                android:textSize="@dimen/dp_10" />

            <ImageView
                android:id="@+id/iv_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/replay"
                android:padding="@dimen/dp_8" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25">

            <ImageView
                android:id="@+id/iv_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/mood"
                android:padding="@dimen/dp_8" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>