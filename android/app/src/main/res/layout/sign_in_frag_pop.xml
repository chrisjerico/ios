<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:maxHeight="@dimen/dp_500"
    android:background="@drawable/ba_wr_5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ba_yellow_5"
        >

        <ImageView
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:src="@mipmap/kjjg"
            android:visibility="invisible"
            />
        
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_60"
            android:orientation="vertical"

            >

    <TextView
        android:id="@+id/day_num_tex"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        style="@style/pub_tex"
        android:textColor="@color/black"
        />

            <TextView
                android:id="@+id/integral_and_tex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                style="@style/pub_tex"
                android:gravity="top"
                android:textColor="@color/color_white"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/clean_img"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:src="@drawable/dialog_close"
            />

    </LinearLayout>

    <include layout="@layout/line"/>

    <include layout="@layout/sign_pop_lay"
        android:id="@+id/sign_pop_lin"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sign_in_frag_pop_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        />


</LinearLayout>
