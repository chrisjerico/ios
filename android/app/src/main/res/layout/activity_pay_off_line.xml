<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main"
    android:background="@color/my_backgroup"
    android:fitsSystemWindows="true">

    <com.phoenix.lotterys.view.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        app:left="0x00000000"
        app:left_icon="@drawable/finish"
        app:right_icon="@drawable/finish"
        app:right_text=""
        app:title="@string/pay_deposit"
        app:titlebar_type="13"></com.phoenix.lotterys.view.CustomTitleBar>

    <com.phoenix.lotterys.view.MyNestedScrollView
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/dp_5"-->
                <!--android:background="@color/fount1"-->
                <!--android:padding="@dimen/dp_5">-->

                <TextView
                    android:id="@+id/tv_warn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:text=""
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/fount1"
                    android:textColor="@color/white" />

            <!--</LinearLayout>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_10"
                android:text="@string/select_user"
                android:id="@+id/tv_titleuser"
                android:textColor="@color/bgColor_overlay" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5" />
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/tv_recharge"-->
                <!--android:textColor="@color/fount1"-->
                <!--android:padding="@dimen/dp_5"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home_ticket_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ll_bank"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/bank_user"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_bank_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/bank_user" />

                    <TextView
                        android:id="@+id/tv_bank_user_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:text="@string/copy"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:id="@+id/view_1"
                    android:background="@color/my_line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/payee"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_payee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/bank_user" />

                    <TextView
                        android:id="@+id/tv_payee_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:text="@string/copy"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/my_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/bank_account"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_user"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/bank_account" />

                    <TextView
                        android:id="@+id/tv_user_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:text="@string/copy"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/my_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ll_site"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="@string/bank_site"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_site"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="@string/bank_user" />

                    <TextView
                        android:id="@+id/tv_site_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_5"
                        android:padding="@dimen/dp_5"
                        android:text="@string/copy"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/rl_qr"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_5">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ewm"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/black"
                    android:text="@string/qr_code" />

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_150"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_toRightOf="@+id/tv_ewm"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_img"
                    android:id="@+id/tv_qr"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/black"
                    android:text="@string/qr_album" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_deposit_money"
                    style="@style/pub_tex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/deposit_money"
                    android:inputType="phone"
                    android:maxLength="20" />

                <include layout="@layout/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_deposit_money_tex"
                        style="@style/pub_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:text="@string/money_integer"
                        android:textColor="@color/color_fe594b"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_deposit_money_num"
                        style="@style/pub_tex"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="0/20" />

                </LinearLayout>


                <EditText
                    android:id="@+id/ed_remark"
                    style="@style/pub_tex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/remark"
                    android:inputType="text"
                    android:maxLength="20" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/my_line"></View>

                <LinearLayout
                    android:id="@+id/ll_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_remark_tex"
                        style="@style/pub_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:text="@string/pwd_null"
                        android:textColor="@color/color_fe594b"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_remark_num"
                        style="@style/pub_tex"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="0/20" />

                </LinearLayout>


                <EditText
                    android:id="@+id/et_transfer_name"
                    style="@style/pub_tex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:gravity="left|center_vertical"
                    android:hint="@string/Transfer_name"
                    android:inputType="text"
                    android:maxLength="20" />

                <include layout="@layout/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_transfer"
                        style="@style/pub_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:text="@string/pwd_null"
                        android:textColor="@color/color_fe594b"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_transfer_name"
                        style="@style/pub_tex"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="0/20" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_hint"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home_ticket_bg"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/fount1" />

            <Button
                android:id="@+id/bt_topup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/lottery_bck_14"
                android:text="@string/sub"
                android:textColor="@color/color_f4f4f4" />


        </LinearLayout>
    </com.phoenix.lotterys.view.MyNestedScrollView>


</RelativeLayout>