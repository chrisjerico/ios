<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@color/color_white"
            android:orientation="vertical">

          <include layout="@layout/pub_telete_lay"/>

            <RelativeLayout
                android:id="@+id/mian_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_userInfo"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_1">

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@drawable/head"
                        />

                    <LinearLayout
                        android:id="@+id/ll_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/iv_img"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/color_white"
                                android:visibility="gone"
                                android:textSize="@dimen/sp_15" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_userParentId"
                                android:textColor="@color/color_white"
                                style="@style/pub_tex"
                                android:textSize="@dimen/sp_15"/>

                            <TextView
                                android:id="@+id/vip_tex"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:textColor="@color/color_white"
                                style="@style/pub_tex"
                                android:textSize="@dimen/sp_15"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tv_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/sp_15" />


                            <ImageView
                                android:id="@+id/iv_refresh"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:padding="@dimen/dp_4"
                                android:background="@mipmap/refresh"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_integral"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_12"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_integral1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rl_userInfo"
                    android:padding="@dimen/dp_10"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:id="@+id/ll_level"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="@color/color_white"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_grow"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_gravity="center_horizontal"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_20"
                            android:id="@+id/iv_task"
                            android:background="@drawable/usercenter0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@+id/ll_level"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_marginRight="@dimen/dp_25"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/vip_frot_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/pub_tex"
                                android:textColor="@color/color_white"
                                />
                            <ProgressBar
                                android:id="@+id/progress1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_weight="1"
                                android:layout_height="@dimen/dp_10"
                                android:progressDrawable="@drawable/progress_bg"
                                android:layout_gravity="center"

                                />
                            <TextView
                                android:id="@+id/vip_queen_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/pub_tex"
                                android:textColor="@color/color_white"
                                />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_20"
                            android:id="@+id/iv_sign"
                            android:visibility="invisible"
                            android:background="@drawable/dailysign_new"/>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

    <com.phoenix.lotterys.view.DynamicWave
        android:id="@+id/d_wave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:rotation="180" />

            <View
                android:id="@+id/my_lin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                >
            </View>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/horizontal_rec"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_10"
                />


    <FrameLayout
        android:id="@+id/framnent_lin"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone"
            android:orientation="horizontal">

            <com.flyco.tablayout.SlidingTabLayout xmlns:tl="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tab_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                tl:tl_indicator_anim_duration="1"
                tl:tl_indicator_color="?attr/colorAccent"
                tl:tl_indicator_width_equal_title="true"
                tl:tl_textSelectColor="?attr/colorAccent"
                tl:tl_textUnselectColor="@color/bgColor_overlay"
                tl:tl_tab_space_equal = "true"
                tl:tl_textsize="@dimen/dp_14" />

        </LinearLayout>

        <com.phoenix.lotterys.view.ViewPagerSlide
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11000000" />
    </LinearLayout>
</LinearLayout>
