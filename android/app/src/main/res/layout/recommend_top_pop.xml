<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_buy_ticket_dialog_bg"
    android:paddingRight="@dimen/dp_12"
    android:paddingLeft="@dimen/dp_12"
    >

    <TextView
        android:id="@+id/title_tex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        style="@style/pub_tex"
        android:text="用户信息"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        />

    <include layout="@layout/line"
        />

    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/account_status_lin"/>


    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/user_name_lin"
        />


    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/registration_date_lin"
        />

    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/relationship_superior_lin"
        />


    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/balance_user_lin"
        />


    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/my_balance"
        />

    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/my_balance1"
        android:visibility="gone"
        />

    <include layout="@layout/note_details_pub_lay"
        android:id="@+id/my_balance2"
        android:visibility="gone"
        />

    <include layout="@layout/line"/>

    <LinearLayout
        android:id="@+id/input_menye_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/recharge_amount_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"

            />

        <EditText

            android:layout_marginLeft="@dimen/dp_12"
            style="@style/pub_tex"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/shape_home_ticket_bg_ask_5"
            android:paddingRight="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:id="@+id/edit_context"
            android:gravity="left|center_vertical"
            android:hint="范围:0-100000元"
            android:maxLength="6"
            android:inputType="number"
            />


    </LinearLayout>


    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/clear_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex"
            android:text="取消"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_004dff"
            />

        <TextView
            android:id="@+id/commit_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex"
            android:text="确定"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_004dff"
            />

    </LinearLayout>

</LinearLayout>
