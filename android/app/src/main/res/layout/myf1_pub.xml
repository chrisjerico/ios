<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_money_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal"
        android:background="@drawable/ba_top_wh_5"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        >

        <TextView
            android:id="@+id/tv_money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_fe594b"
            style="@style/pub_tex"
            android:textSize="@dimen/sp_12"
            android:drawableLeft="@drawable/menu_blance"
            />


        <ImageView
            android:id="@+id/iv_refresh1"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center"
            android:background="@drawable/refresh_money" />


        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/recharge_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:background="@drawable/lottery_bck_1"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="充值"
            android:textSize="@dimen/sp_12"
            />


        <TextView
            android:id="@+id/deposit_tex"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:background="@drawable/lottery_bck_1"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="提现"
            android:textSize="@dimen/sp_12"
            />


        <TextView
            android:id="@+id/line_conversion_tex"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:background="@drawable/lottery_bck_1"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:text="额度转换"
            android:textSize="@dimen/sp_12"
            />


</LinearLayout>
