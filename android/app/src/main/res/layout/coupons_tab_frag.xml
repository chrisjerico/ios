<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.phoenix.lotterys.view.CustomTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        app:left="0x00000000"
        app:left_icon="@drawable/finish"
        app:right_icon="@drawable/finish"
        app:right_text=""
        app:title="@string/coupons"
        app:titlebar_type="13">
    </com.phoenix.lotterys.view.CustomTitleBar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tb_coupons_tab"
        style="@style/pub_tex"
        android:layout_width="match_parent"
        android:background="?attr/colorAccent"
        android:layout_height="@dimen/dp_40"
        app:tabIndicatorColor="@color/color_fe594b"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="@dimen/dp_60"
        app:tabMinWidth="@dimen/dp_60"
        app:tabPaddingBottom="-1dp"
        app:tabPaddingEnd="-1dp"
        app:tabPaddingStart="-1dp"
        app:tabPaddingTop="-1dp"
        app:tabMode="scrollable"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
