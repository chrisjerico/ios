<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/lottery_bck_14"
    >

    <TextView
        android:id="@+id/title_tex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="温馨提示"
        android:textSize="@dimen/sp_14"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/color_white"
        />
    
    <include layout="@layout/line"
        android:id="@+id/lin_tex"
        />

    <TextView
        android:id="@+id/context_tex"
        android:layout_width="match_parent"
        android:padding="@dimen/dp_8"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="您要撤销注单号2446订单吗？"
        android:textSize="@dimen/sp_14"
        android:maxHeight="@dimen/dp_500"
        android:textColor="@color/color_white"
        />
    <!--<cn.droidlover.xrichtext.XRichText-->
        <!--android:id="@+id/richText"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:gravity="center"-->
        <!--android:visibility="gone"-->
        <!--android:textSize="@dimen/sp_11"-->
        <!--android:maxHeight="@dimen/dp_500"-->
        <!--android:padding="@dimen/dp_8" />-->
    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/clear_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:text="取消"
            android:textSize="@dimen/sp_14"
            />

        <TextView
            android:id="@+id/commit_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:text="确定"
            android:textSize="@dimen/sp_14"
            />

    </LinearLayout>

</LinearLayout>
