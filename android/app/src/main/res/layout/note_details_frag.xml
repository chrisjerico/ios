<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    >

    <include layout="@layout/pub_telete_lay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            style="@style/pub_tex"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"

            >
            <TextView
                android:id="@+id/name_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/pub_tex"
                android:layout_gravity="left"
                android:textSize="@dimen/sp_16"
                />

            <TextView
                android:id="@+id/num_tex"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/pub_tex"
                android:layout_gravity="left"
                android:textSize="@dimen/sp_16"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/status_tex"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/sp_18"
            />


    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="vertical"
                    >

                    <include layout="@layout/note_details_pub_lay"
                            android:id="@+id/spend_time_lin"
                        />
                    <include layout="@layout/note_details_pub_lay"
                        android:id="@+id/spend_num_lin"
                        />
                    <include layout="@layout/note_details_pub_lay"
                        android:id="@+id/odds_lin"
                        />
                    <include layout="@layout/note_details_pub_lay"
                        android:id="@+id/spend_money_lin"
                        />
                    <include layout="@layout/note_details_pub_lay"
                        android:id="@+id/send_amount_lin"
                        />
                    <include layout="@layout/note_details_pub_lay"
                        android:id="@+id/lottery_number_lin"
                        />

                    <include layout="@layout/line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal"
                        >


                    <TextView
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        style="@style/pub_tex"
                        android:text="我的投注"
                        android:textSize="@dimen/sp_16"
                        android:textColor="#f57c00"
                        android:layout_gravity="left"
                        android:gravity="left|center_vertical"
                        />


                        <TextView
                            android:id="@+id/cancellations_tex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/pub_tex"
                            android:background="@drawable/shape_ticket_dialog_title_bg_5"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingRight="@dimen/dp_12"
                            android:paddingBottom="@dimen/dp_5"
                            android:padding="@dimen/dp_5"
                            android:textColor="@color/white"
                            android:text="撤单"
                            android:visibility="gone"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120"
                        android:orientation="vertical"
                        android:background="@mipmap/bet_btail_bg"
                        >
                        
                        <TextView
                            android:id="@+id/playing_method_tex"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1"
                            style="@style/pub_tex"
                            android:textColor="@color/fount_ash"
                            android:layout_gravity="left"
                            android:gravity="bottom"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:textSize="@dimen/sp_16"
                            />

                        <TextView
                            android:id="@+id/will_be_amount_tex"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1"
                            style="@style/pub_tex"
                            android:textColor="@color/fount_ash"
                            android:layout_gravity="left"
                            android:gravity="top"
                            android:layout_marginLeft="@dimen/dp_44"
                            android:textSize="@dimen/sp_16"
                            />
                        
                    </LinearLayout>


    </LinearLayout>

</LinearLayout>
