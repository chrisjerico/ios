<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_60"
    android:layout_marginLeft="@dimen/dp_60"
    android:background="@drawable/shape_buy_hall_ticket_bg"
    android:orientation="vertical"
    android:id="@+id/fdsfaaa"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        style="@style/pub_tex"
        android:text="请输入谷歌验证码解除绑定"
        />

        <include layout="@layout/line"/>

    <EditText
        android:layout_margin="@dimen/dp_16"
    android:id="@+id/qr_code_edit"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    style="@style/pub_tex"
    android:hint="请输入谷歌验证码"
    android:maxLength="6"
    android:inputType="number"
    />


    <include layout="@layout/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        >

        <TextView
            android:id="@+id/unbundle_close_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex"
            android:text="取消"
            android:textColor="?attr/colorAccent"
            />

        <TextView
            android:id="@+id/unbundle_commit_tex"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/pub_tex"
            android:text="确定"
            android:textColor="?attr/colorAccent"
            />

    </LinearLayout>


</LinearLayout>
