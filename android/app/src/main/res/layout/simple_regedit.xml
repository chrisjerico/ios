                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@mipmap/verificationcode" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_img10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:digits="1234567890QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuioplkjhgfdsazxcvbnm"
                            android:hint="@string/input_code"
                            android:lines="1"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:textColorHint="@color/colorPrimary"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/sp_12" />

                        <RelativeLayout
                            android:id="@+id/rl_img"
                            android:layout_width="@dimen/dp_130"
                            android:layout_height="@dimen/dp_30"
                            android:background="@drawable/shape_home_ticket_bg"
                            android:padding="@dimen/dp_1">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/sx" />

                            <ImageView
                                android:id="@+id/iv_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:scaleType="fitXY" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <im.delight.android.webview.AdvancedWebView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ProgressBar
                    android:id="@+id/pbar_web"
                    style="?android:attr/progressBarStyle"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/lottery_reg"
                android:text="@string/regedit1"
                android:textColor="@color/color_f4f4f4" />

            <Button
                android:id="@+id/bt_regedit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bt_backgroup1"
                android:text="@string/back_login"
                android:visibility="gone"
                android:textColor="?attr/colorAccent" />

            <Button
                android:id="@+id/bt_online_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bt_backgroup1"
                android:text="@string/online_service"
                android:textColor="?attr/colorAccent"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_gotohome"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/bt_backgroup1"
                android:text="@string/gotohome"
                android:visibility="gone"
                android:textColor="?attr/colorAccent" />


            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_login"
                android:gravity="center"
                android:textSize="@dimen/sp_11"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_copyright"
                android:gravity="center"
                android:textSize="@dimen/sp_9"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
<!--    </ScrollView>-->
</LinearLayout>