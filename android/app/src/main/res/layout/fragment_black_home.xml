<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor_center_title"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140">

                <com.youth.banner.Banner
                    android:id="@+id/home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    app:image_scale_type="fit_xy" />

                <TextView
                    android:id="@+id/tv_on_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/frame"
                    android:padding="@dimen/dp_10"
                    android:text="当前在线人数：4000"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tb_ticket_type_lin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_108"
                android:layout_below="@+id/home_banner"
                android:background="@color/textColor_center_title"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_93"
                    android:background="@color/color_525252">
                </View>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tb_ticket_type"
                    style="@style/pub_tex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_98"
                    app:tabIndicatorColor="@color/white"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="@dimen/dp_200"
                    app:tabMinWidth="@dimen/dp_20"
                    app:tabMode="scrollable"
                    app:tabPaddingEnd="12dp"
                    app:tabPaddingStart="12dp"
                    app:tabRippleColor="@android:color/transparent"
                    app:tabSelectedTextColor="@color/color_FDE026"
                    app:tabTextColor="@color/colorPrimaryDark" />
            </RelativeLayout>

            <com.phoenix.lotterys.view.SignViewPager
                android:id="@+id/vp_ticket_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp" />

            <LinearLayout
                android:id="@+id/ll_coupons_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_coup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_8">

                    <ImageView
                        style="@style/pub_tex"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_5"
                        android:id="@+id/iv_titleact"
                        android:tint="@color/white"
                        android:src="@drawable/activity3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/coupons"
                        android:id="@+id/tv_titleact"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"
                        android:id="@+id/tv_titlemore"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_coup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ranking"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_16"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/pub_tex"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:tint="@color/white"
                        android:src="@drawable/seniority" />

                    <TextView
                        android:id="@+id/tv_rankinglist"
                        style="@style/pub_tex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="排行榜"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10" />

                <LinearLayout
                    android:id="@+id/seniority_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20">

                        <TextView
                            style="@style/TextStyle_15_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:gravity="left"
                            android:text="玩家" />

                        <TextView
                            style="@style/TextStyle_15_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="游戏" />

                        <TextView
                            style="@style/TextStyle_15_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="金额" />
                    </LinearLayout>


                    <com.phoenix.lotterys.view.MarqueeView
                        android:id="@+id/recycleAuto"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_142"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></View>

                <ImageView
                    android:id="@+id/img_brain"
                    style="@style/pub_tex"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/dn" />

                <TextView
                    android:id="@+id/tv_brain"
                    style="@style/pub_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/computer"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/img_act"
                    style="@style/pub_tex"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:src="@drawable/activityyw1" />

                <TextView
                    android:id="@+id/tv_act"
                    style="@style/pub_tex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/coupons"
                    android:textColor="@color/white" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></View>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_server_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/sp_11"
                android:text="COPYRIGHT © 68彩票 RESERVED"
                android:textColor="@color/white" />
        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rl_redbag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_rebbag"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="center"

            />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:src="@mipmap/redbag_close" />
    </RelativeLayout>

</RelativeLayout>