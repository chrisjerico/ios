<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/lottery_bck_14"
    android:id="@+id/pop_lin"
    >

    <TextView
        android:id="@+id/titl_tex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        style="@style/pub_tex1"
        android:text="彩金活动"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        />

    <include layout="@layout/line"/>

    <ImageView
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:id="@+id/bet_pop_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        style="@style/pub_tex1"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_20"
        >


        <TextView
            android:id="@+id/bet_pop_close_tex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/pub_tex1"
            android:text="关闭"
            android:background="@drawable/lottery_bck_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            />

        <TextView
            android:id="@+id/bet_pop_goto_tex"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/lottery_bck_15"
            style="@style/pub_tex1"
            android:text="确定"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            />


    </LinearLayout>


</LinearLayout>
