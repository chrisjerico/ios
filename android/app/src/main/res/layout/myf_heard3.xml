<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/main_lin"
    android:background="?attr/colorAccent">



        <RelativeLayout
            android:id="@+id/rl_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_1"
            android:paddingRight="@dimen/dp_27">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:src="@drawable/head"
                />

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_img"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_userParentId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="vip"
                        android:gravity="right"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_10" />
                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/iv_level"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥  "
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 10000  "
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_16" />


                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@mipmap/refresh" />
                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111111"
                    android:id="@+id/tv_taskreward"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>


<ImageView
    android:layout_width="@dimen/dp_60"
    android:layout_height="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_3"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_below="@+id/iv_img"
    android:id="@+id/iv_imgchange"
    android:visibility="gone"
    android:background="@mipmap/avatar">
</ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grow_up_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_userInfo"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:id="@+id/ll_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_grow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:layout_weight="1"
                    android:text="成长值（- 700）"
                    android:textColor="@color/color_white" />

                <ImageView
                    android:id="@+id/iv_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/usercenter"

                    />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/grow_up_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_level"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8">

                <LinearLayout
                    android:id="@+id/progress_lin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_weight="1"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/color_white" />

                    <ProgressBar
                        android:id="@+id/progress1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:progressDrawable="@drawable/progress_bg" />

                    <TextView
                        android:id="@+id/tv_next_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/color_white" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dailysign_new"

                    />
            </LinearLayout>


        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/grow_up_rel"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        >

        <include
            layout="@layout/myf1_pub"
            />
    </LinearLayout>

</RelativeLayout>

