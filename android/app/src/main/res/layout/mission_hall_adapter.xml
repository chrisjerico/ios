<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dp_14"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10"
    >

    <ImageView
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:padding="@dimen/dp_2"
        android:layout_gravity="center"
        android:src="@mipmap/missicon"
        />
    
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="horizontal"
            >
        <!--<LinearLayout-->
            <!--android:layout_width="@dimen/dp_0"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal"-->
            <!--&gt;-->

        <TextView
            android:id="@+id/title_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:gravity="left|bottom"

            />

            <TextView
                android:id="@+id/status_tex"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />


        <!--</LinearLayout>-->
        <TextView
            android:id="@+id/onc_tex"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:text="去完成"
            android:textColor="@color/color_white"
            android:background="@drawable/shape_ticket_dialog_title_bg_5"
            android:textSize="@dimen/sp_12"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/integral_tex"
                style="@style/pub_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/fount1"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/time_tex"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/pub_tex"
                android:layout_gravity="left"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/fount_ash"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
