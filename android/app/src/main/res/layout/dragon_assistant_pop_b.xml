<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorAccent"
    android:paddingBottom="@dimen/dp_16"
    >

    <TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    style="@style/pub_tex1"
    android:background="?attr/colorAccent"
        android:text="长龙助手玩法说明"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_white"
        />

    <TextView
        android:layout_margin="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    长龙助手是对快3、时时彩、PK10、六合彩、幸运飞艇、北京赛车等特定玩法的“大小单双” 开奖结果进行跟踪统计，并可进行快捷投注的助手工具；\n    每期出现大、小、单、双的概率为50%，如果连续3期及以上的开奖结果相同，称之为“长龙”，通常会采用倍投的方式进行“砍龙”或“顺龙”。"
        android:textSize="@dimen/sp_14"
        android:lineSpacingExtra="@dimen/dp_8"
        android:textColor="@color/color_white"
        />

    <TextView
        android:paddingLeft="@dimen/dp_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/pub_tex1"
    android:text="1、什么是砍龙？"
    android:gravity="left|center_vertical"
    android:textStyle="bold"
    android:textSize="@dimen/sp_18"
    />

    <TextView
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_16"
        android:layout_margin="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="如连续开5期“单”，可以选择“双”进行投注，这种投注方案称之为“砍龙”；"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/color_white"
        />
    <TextView
        android:paddingLeft="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/pub_tex1"
        android:text="2、什么是顺龙？"
        android:gravity="left|center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_16"
        android:layout_margin="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="如连续开5期“单”，继续选择“单”进行投注，这种投注方案称之为“顺龙”；"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/color_white"
        />
    <TextView
        android:paddingLeft="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/pub_tex1"
        android:text="3、什么是倍投？"
        android:gravity="left|center_vertical"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_16"
        android:layout_margin="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="倍投是一种翻倍投注方式，是为了保障能够在“砍龙”或“顺龙”的过程中持续盈利的一种投注方式。"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textColor="@color/color_white"
        />


    <TextView
        android:id="@+id/determine_pop_tex"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@drawable/lottery_bck_15"
        style="@style/pub_tex1"
        android:text="确定"
        android:textColor="@color/color_white"
        android:textSize="@dimen/sp_16"
        />

</LinearLayout>
