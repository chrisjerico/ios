<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <LinearLayout
        android:background="@color/my_line"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:id="@+id/note_record_adapter_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_4"
        >

        <TextView
            android:id="@+id/name_tex1"
            style="@style/pub_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/sp_12"
            android:text="彩种: " />

        <TextView
            android:id="@+id/issue_tex"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:text="注单号：2446"
            android:textSize="@dimen/sp_12"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        >

        <TextView
            android:id="@+id/id_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:text="正码特 /双码"
            android:gravity="left"
            android:textSize="@dimen/sp_12"
            />



        <TextView
            android:id="@+id/odds_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:gravity="left"
            android:text="期数: 2019077"
            android:textSize="@dimen/sp_12"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        >

        <TextView
            android:id="@+id/betAmount_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:text="注单号：2446"
            android:textSize="@dimen/sp_12"
            android:gravity="left"
            />


        <TextView
            android:id="@+id/win_amount_tex"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/pub_tex"
            android:text="89元"
            android:gravity="left"
            android:textSize="@dimen/sp_12"
            />


    </LinearLayout>

    <TextView
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:id="@+id/play_name_tex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/lotteryNo_tex0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开奖号码:"
            android:textSize="@dimen/sp_12"

            />
        <TextView
            android:id="@+id/lotteryNo_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/cancel_order_tex"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:background="@drawable/lottery_bck_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/pub_tex"
            android:text="撤单"
            android:visibility="gone"
            />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/real_person_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <include layout="@layout/pubglidstye"
            />
    </LinearLayout>

</LinearLayout>
